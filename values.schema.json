{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "conjur": {
      "properties": {
        "account": {
          "type": "string"
        },
        "applianceUrl": {
          "type": "string"
        },
        "certificateFilePath": {
          "type": "string",
          "minLength": 1,
          "regex": "(^files\/(.*))|(^tests\/(.*))"
        },
        "certificateBase64": {
          "type": "string",
          "minLength": 1,
          "regex": "^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)?$"
        }
      }
    },
    "authnk8s": {
      "properties": {
        "authenticatorId": {
          "type": "string",
          "regex": "(^[a-z0-9])([a-z0-9-.]*)([a-z0-9]$)",
          "maxLength": 253
        },
        "clusterRole": {
          "properties": {
            "create": {
              "type": "boolean"
            },
            "name": {
              "type": "string",
              "regex": "(^[a-z0-9])([a-z0-9-.]*)([a-z0-9]$)",
              "maxLength": 253
            }
          }
        },
        "serviceAccount": {
          "properties": {
            "create": {
              "type": "boolean"
            },
            "name": {
              "type": "string",
              "regex": "(^[a-z0-9])([a-z0-9-.]*)([a-z0-9]$)",
              "maxLength": 253
            }
          }
        }
      }
    }
  }
}
